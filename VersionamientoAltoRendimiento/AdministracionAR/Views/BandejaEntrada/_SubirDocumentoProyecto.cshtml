
@{
    ViewBag.Title = "Create";
}

@model AltoRendimiento.Administracion.Models.BandejaEntradaModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Comfirmacion de Cambio de Estado</h4>
</div>

<div class="modal-body">

    <div class="form-group">

        <fieldset disabled>
            <div class="form-group">
                <label for="lblEstado" class="control-label col-md-4">Estado Seleccionado </label>
                <div class="col-md-7">
                    @Html.TextBoxFor(p => p.Estado, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="lblFecha" class="control-label col-md-4">Fecha</label>
                <div class="col-md-7">
                    @Html.TextBoxFor(p => p.Fecha, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <label for="lblUsuario" class="control-label col-md-4">Usuario</label>
                <div class="col-md-7">
                    @Html.TextBoxFor(p => p.Usuario, new { @class = "form-control" })
                </div>
            </div>
        </fieldset>
    </div>



    <div>
        <div class="form-group">
            <fieldset>
                <legend>
                    Comentario
                </legend>
                <div class="form-group col-xs-12">
                    <textarea class="form-control textArea" rows="5"></textarea>
                </div>
            </fieldset>
        </div>


    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-danger pull-left" data-dismiss="modal">Cancelar</button>
    <button type="submit" class="btn btn-sm btn-success ">Guardar</button>
</div>
