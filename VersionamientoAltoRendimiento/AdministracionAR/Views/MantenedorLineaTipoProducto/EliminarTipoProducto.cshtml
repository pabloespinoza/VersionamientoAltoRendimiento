@model AltoRendimiento.Administracion.Models.OrganizacionLineaTipoProductoModel

@{
    ViewBag.Title = "Eliminar Tipo Producto.";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Eliminar Tipo Producto</h4>
</div>
@using (Html.BeginForm())
{
    <div class="modal-body">
        <div class="form-horizontal">
            <div id="divMensaje">
            </div>
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.idOrganizacionLinea)
            @Html.HiddenFor(model => model.idTipoProducto)
            @Html.HiddenFor(model => model.sAgregado)
            <div class="panel panel-default">
                <div class="panel-heading">
                    Antecedentes Tipo Producto
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.orgNombre, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.orgNombre
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.linNombre, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.linNombre
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.sAgregado, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.sAgregado
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.tprNombre, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.tprNombre
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" id="btnCancelar" class="btn btn-sm btn-danger pull-left" data-dismiss="modal">Cancelar</button>
        <button type="submit" id="btnEditar" class="btn btn-sm btn-success">Guardar</button>
    </div>
}

<script>
    var codRespuesta = '@(ViewBag.codRespuesta)';
    var msgRespuesta = '@(ViewBag.msgRespuesta)';
    var tipoEstilo = "";
    if (msgRespuesta != "") {
        $("#btnEditar").attr("disabled", "disabled");
        $("#btnCancelar").html("Cerrar");
        if (codRespuesta == '0') {
            tipoEstilo = "alert-success";
        } else {
            tipoEstilo = "alert-danger";
        }
        $("#divMensaje").append('<div class="alert ' + tipoEstilo + ' alert-dismissable"><button type="button" class="close" data-dismiss="alert">&times;</button>' + msgRespuesta + '</div>');
    }
</script>
