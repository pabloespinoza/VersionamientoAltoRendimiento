@{
    Layout = null;
}
@model  AltoRendimiento.Administracion.Models.UsuarioModel
<html lang="es">



<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />

    @*<link rel="shortcut icon" href="logo.ico">*@
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title  Instituto Nacional del Deporte</title>

    @Styles.Render("~/bundles/Content")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")

    <script src="~/Scripts/jquery.validate-vsdoc.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {

            var mensaje = '@ViewData["errorLogin"]';
            console.log(mensaje);
            if (mensaje != "") {
                var mensajeUsuario = '<div class="alert ' + "" + ' alert-dismissable"><button type="button" class="close" data-dismiss="alert">&times;</button>' + mensaje + '</div>';
                $("#mensajeresolucion").append(mensajeUsuario);

            }
        });

    </script>



</head>
<body>
    @* Pre LOADER*@
    <div id="preloader" class="se-pre-con">
        <div class="preloader-container">
            <div id="fountainG">
                <div id="fountainG_1" class="fountainG">
                </div>
                <div id="fountainG_2" class="fountainG">
                </div>
                <div id="fountainG_3" class="fountainG">
                </div>
            </div>
        </div>
    </div>
    <div id="wrap" class="boxed ">
        <div class="grey-bg">
            <!-- HEADER-->
            <header class="header header-2 header-not-sticky">
                <div class="header-wrapper">
                    <div class="container">
                        <div class="logo-row">
                            <!-- LOGO -->
                            <div class="logo-container-2">
                                <div class="logo-2">
                                    <img src='@Url.Content("~/Images/logo-alt.png")' class="logo-img" alt="Logo" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- header-wrapper -->
            </header><!-- header -->

            <div id="body">
                <div class="f-box4-container">
                    <div class="container">
                        <br />
                        <div id="myCarousel" class="carousel slide" data-ride="carousel">
                            <!-- Indicators -->
                            <ol class="carousel-indicators">
                                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                <li data-target="#myCarousel" data-slide-to="1"></li>
                                <li data-target="#myCarousel" data-slide-to="2"></li>
                            </ol>

                            <!-- Wrapper for slides -->
                            <div class="carousel-inner" role="listbox">
                                <div class="item active">
                                    <img src="~/Images/flexslider/slider-1.jpg" />
                                </div>

                                <div class="item">
                                    <img src="~/Images/flexslider/slider-2.jpg" />
                                </div>

                                <div class="item">
                                    <img src="~/Images/flexslider/slider-3.jpg" />
                                </div>
                            </div>

                            <!-- Left and right controls -->
                            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <div class="jumbotron">
                            @using (Html.BeginForm("InicioSesion", "Home", FormMethod.Post, new { Id = "formLogin" }))
                            {
                                @Html.AntiForgeryToken()
                                <div id="mensajeresolucion" class="alert-danger">
                                </div>
                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true)
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-md-4">
                                                <h3>Ingreso  de Usuarios</h3>
                                            </div>
                                            <div class="col-md-3">
                                                <label for="inputEmail3" class="col-md-2 control-label">Rut</label>
                                                @Html.TextBoxFor(p => p.RutLogin, new { @class = "form-control", @maxlength = "9", @placeholder = "Rut (12345678K)", @onchange = "return verifica_rut(this)", @onkeypress = "return permite(event, 'rut'); return false;" })
                                                @Html.ValidationMessage("RutLogin", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-md-3">
                                                <label for="inputEmail3" class="col-md-2 control-label">Contraseña</label>
                                                @Html.PasswordFor(p => p.Password, new { @class = "form-control", @maxlength = "20", @placeholder = "Contraseña" })
                                                @Html.ValidationMessage("Password", new { @class = "text-danger" })
                                            </div>
                                            <div class="col-md-1 text-center">
                                                <br />
                                                <button class="btn btn-lg btn-primary" type="submit">Ingresar</button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="text-danger col-md-offset-4 ">@ViewData["errorLogin"]</div><br />

                                </div>

                            }
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-3">

                            </div>

                            <div class="col-sm-12 col-md-3">

                            </div>

                            <div class=" col-sm-12 col-md-3">
                                <div>
                                    <a href="http://www.ind.cl/siac/Paginas/siac.aspx" taget="_blank">
                                        <span aria-hidden="true" class=" icon_lifesaver f-box4-icon"></span>
                                    </a>
                                </div>
                                <div>
                                    <h2>Mesa de Ayuda</h2>
                                    <div>Estimado usuario, para obtener ayuda o resolver cualquier duda del proceso de postulación. Ejemplo: bases de postulación, aplicación web u otro.<br /><br /> <a href="http://www.ind.cl/siac/Paginas/siac.aspx" taget="_blank">Más información</a></div>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-3">
                                <div>
                                    <a href="organizaciones-deportivas.html">
                                        <span aria-hidden="true" class="icon_building f-box4-icon"></span>
                                    </a>
                                </div>
                                <div>
                                    <h2>Registro Nacional de Organizaciones</h2>
                                    <div>
                                        En esta sección se podrá formalizar una organización como una entidad que le permita percibir recursos fiscales para fines deportivos.<br /><br />
                                        <br />
                                        <a href="">Más información</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <footer>
                <!-- FOOTER 3-->
                <div class="footer3-bg">
                    <div class="container">
                        <div class="row">
                            <!-- ICON CONTAINER  -->
                            <div class="col-md-4 footer3-icon-container">
                                <div class="footer3-icon">
                                    <span aria-hidden="true" class="icon_pin_alt"></span>
                                </div>
                                <h3 class="footer3-title-container">
                                    UBICACIÓN
                                </h3>
                                <div class="footer3-text-container">
                                    Fidel Oteiza N°1956, piso 3, Providencia. Santiago - Chile
                                </div>
                            </div>
                            <div class="col-md-4 footer3-icon-container">
                                <div class="footer3-icon">
                                    <span aria-hidden="true" class="icon_phone"></span>
                                </div>
                                <h3 class="footer3-title-container">
                                    TELÉFONO
                                </h3>
                                <div class="footer3-text-container">
                                    (56 2 ) 2754 02 00
                                </div>
                            </div>
                            <div class="col-md-4 footer3-icon-container">
                                <div class="footer3-icon">
                                    <span aria-hidden="true" class="icon_comment"></span>
                                </div>
                                <h3 class="footer3-title-container">
                                    IND ATIENDE
                                </h3>
                                <div class="footer3-text-container">
                                    <a class="a-invert" href="mailto:indatiende@ind.cl">indatiende@ind.cl</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- COPYRIGHT  -->
                <div class="footer3-copyright-container title-lines-container">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-8">

                            </div>
                            <div class="col-md-4">
                                <div class="footer-copyright-container">
                                    <div class="footer3-copyright-text">
                                        @*<a class="author" href="politicas.html">Política de Privacidad</a>*@
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- COPYRIGHT -->
                <p id="back-top" class="footer3-copyright-container title-lines-container">
                    <a href="#top" title="Back to Top"><span></span></a>
                </p>
            </footer>
            @Scripts.Render("~/bundles/jquery", "~/bundles/bootstrap", "~/Scripts/FuncionesKibernum.js")
            <script>
                window.onload = function () {
                    document.body.removeChild(document.getElementById('preloader'));
                    $('body').removeClass('preloader-overflow');
                }
            </script>

        </div>
    </div>
</body>


</html>