@model AltoRendimiento.Administracion.Models.TipoGastoPersonalModel

@{
    ViewBag.Title = "Editar Tipo Gasto Personal.";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Editar Tipo Gasto Personal</h4>
</div>
@using (Html.BeginForm())
{
    <div class="modal-body">
        <div class="form-horizontal">
            <div id="divMensaje">
            </div>
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.idTipoGastoPersonal)
            <div class="panel panel-default">
                <div class="panel-heading">
                    Antecedentes Tipo Gasto Personal
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.tgpNombre, new { @class = "col-md-6" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.tgpNombre, new { @class = "form-control", @maxlength = "128" })
                            @Html.ValidationMessageFor(model => model.tgpNombre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.TipoGastoConverge, new { @class = "col-md-6" })
                        <div class="col-md-6">
                            @Html.DropDownListFor(model => model.idTipoGastoConverge, new SelectList(Model.TipoGastoConverge, "Value", "Text", Model.idTipoGastoConverge), "--Seleccione--", new { @id = "Concurso-DropdownID", @class = "form-control", @data_toggle = "tooltip", @title = "Concurso Asociado al Proyecto." })
                            @Html.ValidationMessageFor(model => model.TipoGastoConverge, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.tgpDescripcion, new { @class = "col-md-6" })
                        <div class="col-md-6">
                            @Html.TextAreaFor(model => model.tgpDescripcion, new { @class = "form-control", @maxlength = "2048", @style = "resize:none;", @rows = "5" })
                            @Html.ValidationMessageFor(model => model.tgpDescripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.tgpNumeroGastoPersonal, new { @class = "col-md-6" })
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.tgpNumeroGastoPersonal, new { @class = "form-control", @maxlength = "10" })
                            @Html.ValidationMessageFor(model => model.tgpNumeroGastoPersonal, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" id="btnCancelar" class="btn btn-sm btn-danger pull-left" data-dismiss="modal">Cancelar</button>
        <button type="submit" id="btnEditar" class="btn btn-sm btn-success">Guardar</button>
    </div>
}
<script>
    var codRespuesta = '@(ViewBag.codRespuesta)';
    var msgRespuesta = '@(ViewBag.msgRespuesta)';
    var tipoEstilo = "";
    if (msgRespuesta != "") {
        $("#btnEditar").attr("disabled", "disabled");
        $("#btnCancelar").html("Cerrar");
        $("#tgpNombre").attr("disabled", "disabled");
        $("#tgpDescripcion").attr("disabled", "disabled");
        $("#tagNumeroGastoPersonal").attr("disabled", "disabled");

        if (codRespuesta == '0') {
            tipoEstilo = "alert-success";
        } else {
            tipoEstilo = "alert-danger";
        }
        $("#divMensaje").append('<div class="alert ' + tipoEstilo + ' alert-dismissable"><button type="button" class="close" data-dismiss="alert">&times;</button>' + msgRespuesta + '</div>');
    }
</script>
