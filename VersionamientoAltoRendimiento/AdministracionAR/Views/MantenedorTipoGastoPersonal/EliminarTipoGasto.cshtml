@model AltoRendimiento.Administracion.Models.TipoGastoPersonalModel

@{
    ViewBag.Title = "Eliminar Tipo Gasto Personal.";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">¿Está seguro que desea eliminar Tipo Gasto Personal?</h4>
</div>
@using (Html.BeginForm())
{
    <div class="modal-body">
        <div class="form-horizontal">
            <div id="divMensaje">
            </div>
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.idTipoGastoPersonal)
            <div class="panel panel-default">
                <div class="panel-heading">
                    Antecedentes Tipo Gasto Personal
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.tgpNombre, new { @class = "col-md-6" })
                        <div class="col-md-6">
                            @Model.tgpNombre
                            @Html.HiddenFor(model => model.tgpNombre)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.tgpDescripcion, new { @class = "col-md-6" })
                        <div class="col-md-6">
                            @Model.tgpDescripcion
                            @Html.HiddenFor(model => model.tgpDescripcion)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.tgpNumeroGastoPersonal, new { @class = "col-md-6" })
                        <div class="col-md-6">
                            @Model.tgpNumeroGastoPersonal
                            @Html.HiddenFor(model => model.tgpNumeroGastoPersonal)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" id="btnCancelar" class="btn btn-sm btn-danger pull-left" data-dismiss="modal">Cancelar</button>
        <button type="submit" id="btnEliminar" class="btn btn-sm btn-success">Eliminar</button>
    </div>
}
<script>
    var codRespuesta = '@(ViewBag.codRespuesta)';
    var msgRespuesta = '@(ViewBag.msgRespuesta)';
    var tipoEstilo = "";
    if (msgRespuesta != "") {
        $("#btnEliminar").attr("disabled", "disabled");
        $("#btnCancelar").html("Cerrar");
        if (codRespuesta == '0') {
            tipoEstilo = "alert-success";            
        } else {
            tipoEstilo = "alert-danger";
        }
        $("#divMensaje").append('<div class="alert ' + tipoEstilo + ' alert-dismissable"><button type="button" class="close" data-dismiss="alert">&times;</button>' + msgRespuesta + '</div>');
    }
</script>
