@model AltoRendimiento.Administracion.Models.LineaModel

@{
    ViewBag.Title = "Detalle Línea.";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Línea</h4>
</div>
@using (Html.BeginForm())
{
    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()

            <div class="panel panel-default">
                <div class="panel-heading">
                    Antecedentes Línea
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Programa, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.Programa
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.sLineaClasificacion, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.sLineaClasificacion
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.linNombre, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.linNombre
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.linDescripcion, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.linDescripcion
                        </div>
                    </div>
                </div>
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    Antecedentes Cuenta
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.sCuentaNombre, new { @class = "col-md-4" })
                    <div class="col-md-8">
                        @Model.sCuentaNombre
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.sCuentaAnio, new { @class = "col-md-4" })
                    <div class="col-md-8">
                        @Model.sCuentaAnio
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.sCuentaNumero, new { @class = "col-md-4" })
                    <div class="col-md-8">
                        @Model.sCuentaNumero
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.sCuentaCentroFinanciero, new { @class = "col-md-4" })
                    <div class="col-md-8">
                        @Model.sCuentaCentroFinanciero
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ctaPresupuestoVigente, new { @class = "col-md-4" })
                    <div class="col-md-8">
                        @Model.ctaPresupuestoVigente
                    </div>
                </div>
            </div>
         </div>
    </div>
}
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-info pull-left" data-dismiss="modal">Volver</button>
</div>
