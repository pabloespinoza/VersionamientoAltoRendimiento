@model AltoRendimiento.Administracion.Models.CuentaModel

@{
    ViewBag.Title = "Eliminar Cuenta.";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">¿Está seguro que desea eliminar Cuenta?</h4>
</div>
@using (Html.BeginForm())
{
    <div class="modal-body">
        <div class="form-horizontal">
            <div id="divMensaje">
            </div>
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.idCuenta)
            @Html.HiddenFor(model => model.regNumeroRegion)
            @Html.HiddenFor(model => model.ctaAno)
            <div class="panel panel-default">
                <div class="panel-heading">
                    Antecedentes Cuenta
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.sCentroFinanciero, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.sCentroFinanciero
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ctaAno, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.ctaAno
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ctaNumeroCuenta, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.ctaNumeroCuenta
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ctaNombreCuenta, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.ctaNombreCuenta
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ctaPresupuestoVigente, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.ctaPresupuestoVigente
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ctaReintegro, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.ctaReintegro
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ctaGirado, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.ctaGirado
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.ctaAsignado, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.ctaAsignado
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" id="btnCancelar" class="btn btn-sm btn-danger pull-left" data-dismiss="modal">Cancelar</button>
        <button type="submit" id="btnEliminar" class="btn btn-sm btn-success">Eliminar</button>
    </div>
}
<script>
    var codRespuesta = '@(ViewBag.codRespuesta)';
    var msgRespuesta = '@(ViewBag.msgRespuesta)';
    var tipoEstilo = "";
    if (msgRespuesta != "") {
        $("#btnEliminar").attr("disabled", "disabled");
        $("#btnCancelar").html("Cerrar");
        if (codRespuesta == '0') {
            tipoEstilo = "alert-success";
        } else {
            tipoEstilo = "alert-danger";
        }
        $("#divMensaje").append('<div class="alert ' + tipoEstilo + ' alert-dismissable"><button type="button" class="close" data-dismiss="alert">&times;</button>' + msgRespuesta + '</div>');
    }
</script>
