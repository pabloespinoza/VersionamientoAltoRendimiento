@model AltoRendimiento.Administracion.Models.ConcursoModel

@{
    ViewBag.Title = "Nuevo Concurso.";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Nuevo Concurso</h4>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <div id="divMensaje">
            </div>
            @Html.ValidationSummary(true)
            <div class="panel panel-default">
                <div class="panel-heading">
                    Antecedentes Concurso
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.conAno, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.conAno, new { @class = "form-control", @maxlength = "4" })
                            @Html.ValidationMessageFor(model => model.conAno, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.conNombre, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.conNombre, new { @class = "form-control", @maxlength = "128" })
                            @Html.ValidationMessageFor(model => model.conNombre, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.conInicioPostulacion, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.conInicioPostulacion, new { @class = "form-control", @maxlength = "10" })
                            @Html.ValidationMessageFor(model => model.conInicioPostulacion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.conFinPostulacion, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.conFinPostulacion, new { @class = "form-control", @maxlength = "10" })
                            @Html.ValidationMessageFor(model => model.conFinPostulacion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.conDescripcion, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Html.TextAreaFor(model => model.conDescripcion, new { @class = "form-control", @maxlength = "2048", @style = "resize:none;", @rows = "5" })
                            @Html.ValidationMessageFor(model => model.conDescripcion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" id="btnCancelar" class="btn btn-sm btn-danger pull-left" data-dismiss="modal">Cancelar</button>
        <button type="submit" id="btnGrabar" class="btn btn-sm btn-success">Guardar</button>
    </div>
}
<script>
    var codRespuesta = '@(ViewBag.codRespuesta)';
    var msgRespuesta = '@(ViewBag.msgRespuesta)';
    var tipoEstilo = "";
    if (msgRespuesta != "") {
        $("#btnGrabar").attr("disabled", "disabled");
		$("#conAno").attr("disabled", "disabled");
        $("#conNombre").attr("disabled", "disabled");
		$("#conInicioPostulacion").attr("disabled", "disabled");
		$("#conFinPostulacion").attr("disabled", "disabled");
        $("#conDescripcion").attr("disabled", "disabled");
        $("#btnCancelar").html("Cerrar");
        if (codRespuesta == '0') {
            tipoEstilo = "alert-success";
        } else {
            tipoEstilo = "alert-danger";
        }
        $("#divMensaje").append('<div class="alert ' + tipoEstilo + ' alert-dismissable"><button type="button" class="close" data-dismiss="alert">&times;</button>' + msgRespuesta + '</div>');
    }
</script>
