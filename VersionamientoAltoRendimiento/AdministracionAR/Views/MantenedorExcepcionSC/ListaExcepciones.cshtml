@model AltoRendimiento.Administracion.Models.MantenedorExcepcionSCModel


@using System.Globalization;
<div class="text-right">
    @Html.ActionLink("Volver", "Index", "BandejaEntrada", null, new { @class = "btn btn-sm btn-info pull-left", @style = "color:White" })
    @Html.ActionLink("Nuevo", "AgregarExcepcion", "MantenedorExcepcionSC", null, new { data_modal = "", id = "btnAgregarExcepcion", @class = "btn btn-sm btn-primary text-right", @style = "color:White" })
</div>
<br />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap.min.js"></script>
<link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />
<script>
    $(document).ready(function () {
        $("#tblExcepcionesSC").DataTable({
            "language":
                {
                    "sProcessing": "Procesando...",
                    "sLengthMenu": "Mostrar _MENU_ registros",
                    "sZeroRecords": "No se encontraron resultados",
                    "sEmptyTable": "Ningún dato disponible en esta tabla",
                    "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sSearch": "Buscar:",
                    "sUrl": "",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    },
                    "oAria": {
                        "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                        "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                    }
                }
        }).on("draw.dt", function () {
            addEventClickDataModal();
        });

        if ('@Model.ListaExcepciones.Count()' == '0') {
            $("#dvData").hide();
        } else {
            $("#dvData").show();
        }
    });
</script>

<div id="dvData" class="table-responsive">
    <table id="tblExcepcionesSC" class="table table-condensed table-bordered  table-hover">
        <thead>
            <tr>
                <th>
                    Nombre Producto
                </th>
                <th>
                    Tipo Producto
                </th>
                <th>
                    Nombre Línea
                </th>
                <th>
                    Fecha Inicio Producto
                </th>
                <th>
                    Fecha Fin Producto
                </th>
                <th>
                    Monto Producto
                </th>
                <th>
                    Acción
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListaExcepciones)
            {
                <tr>
                    <td>
                        @item.NombreProducto
                    </td>
                    <td>
                        @item.NombreTipoProducto
                    </td>
                    <td>
                        @item.NombreLinea
                    </td>
                    <td>
                        @CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(item.FechaInicioProducto)
                    </td>
                    <td>
                        @CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(item.FechaFinProducto)
                    </td>
                    <td>
                        @String.Format("{0:C0}", item.MontoProducto)
                    </td>
                    <td class="text-right">
                        @Html.Raw(@Html.ActionLink("[replacetext]", "DetalleExcepcion", new { id = item.IdExcepcionSolicitudCambio }, new { data_modal = "" }).ToHtmlString().Replace("[replacetext]", "<img data-toggle='tooltip' title='Ver Justificación' src=\"Images/Reporte.png\" ... />"))
                        @Html.Raw(@Html.ActionLink("[replacetext]", "EditarExcepcion", new { id = item.IdExcepcionSolicitudCambio }, new { data_modal = "" }).ToHtmlString().Replace("[replacetext]", "<img data-toggle='tooltip' title='Editar' src=\"Images/Edit.png\" ... />"))
                        @Html.Raw(@Html.ActionLink("[replacetext]", "EliminarExcepcion", new { id = item.IdExcepcionSolicitudCambio }, new { data_modal = "" }).ToHtmlString().Replace("[replacetext]", "<img data-toggle='tooltip' title='Eliminar' src=\"Images/Trash.png\" ... />"))
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

