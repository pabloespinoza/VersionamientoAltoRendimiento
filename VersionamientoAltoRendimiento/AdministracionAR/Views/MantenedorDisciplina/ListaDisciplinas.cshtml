@model AltoRendimiento.Administracion.Models.MantenedorDisciplinaModel

@using PagedList.Mvc;
<div class="text-right">
    @Html.ActionLink("Volver", "Index", "BandejaEntrada", null, new { @class = "btn btn-sm btn-info pull-left", @style = "color:White" })
    @Html.ActionLink("Nueva", "AgregarDisciplina", "MantenedorDisciplina", null, new { data_modal = "", id = "btnAgregarDisciplina", @class = "btn btn-sm btn-primary text-right", @style = "color:White" })
</div>
<br />

<div class="table-responsive">
    <table id="tblDisciplinas" class="table table-condensed table-bordered  table-hover">
        <thead>
            <tr>
                <th>
                    @Html.ActionLink("Nombre", "Index", new AltoRendimiento.Administracion.Models.MantenedorDisciplinaModel { SortOrder = ViewBag.NombreSortParm, Page = Model.Page, NombreBuscar = Model.NombreBuscar })
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.orgNombre)
                </th>
                <th>
                    Acción
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListaDisciplinas)
            {
                <tr>
                    <td>
                        @item.Nombre
                    </td>
                    <td>
                        @item.Descripcion
                    </td>
                    <td>
                        @item.orgNombre
                    </td>
                    <td class="text-right">
                        @Html.Raw(@Html.ActionLink("[replacetext]", "EditarDisciplina", new { id = item.IdDisciplina }, new { data_modal = "" }).ToHtmlString().Replace("[replacetext]", "<img data-toggle='tooltip' title='Editar' src=\"Images/Edit.png\" ... />"))
                        @Html.Raw(@Html.ActionLink("[replacetext]", "EliminarDisciplina", new { id = item.IdDisciplina }, new { data_modal = "" }).ToHtmlString().Replace("[replacetext]", "<img data-toggle='tooltip' title='Eliminar' src=\"Images/Trash.png\" ... />"))
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div id="dvInfoPaginacion">
        Página @(Model.ListaDisciplinas.PageCount < Model.ListaDisciplinas.PageNumber ? 0 : Model.ListaDisciplinas.PageNumber) de @Model.ListaDisciplinas.PageCount
        @Html.PagedListPager(Model.ListaDisciplinas, page => Url.Action("Index", new AltoRendimiento.Administracion.Models.MantenedorDisciplinaModel { SortOrder = ViewBag.CurrentSort, Page = page, NombreBuscar = Model.NombreBuscar, idOrganizacionBusca = Model.idOrganizacionBusca }))
    </div>
</div>
