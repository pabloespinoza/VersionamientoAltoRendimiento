@model AltoRendimiento.Administracion.Models.AlertaModel
@using AltoRendimiento.Administracion.Enums

@{
    ViewBag.Title = "Detalle Plantilla Correo Alerta.";
}

<div class="modal-header">
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script type="text/javascript">
        tinymce.init({
            selector: '#aleHtmlBody',
            language: 'es',
            height: 300,
            readonly:1,
            statusbar: false,
            plugins: [
            "code"
            ]
        });
    </script>
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Plantilla Correo Alerta</h4>
</div>
@using (Html.BeginForm())
{
    <div class="modal-body">
        <div class="form-horizontal">
            <div id="divMensaje">
            </div>
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            <div class="panel panel-default">
                <div class="panel-heading">
                    Antecedentes Plantilla Correo Alerta
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.aleNombre, new { @class = "col-md-3" })
                        <div class="col-md-9">
                            @Model.aleNombre
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.aleTipoAlerta, new { @class = "col-md-3" })
                        <div class="col-md-9">
                            @Model.sTipoAlerta
                        </div>
                    </div>
                    @if (Model.aleTipoAlerta == (int)TipoAlerta.CambioEstado)
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.sWorkFlowInicio, new { @class = "col-md-3" })
                            <div class="col-md-9">
                                @Model.sWorkFlowInicio
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.sWorkFlowDestino, new { @class = "col-md-3" })
                            <div class="col-md-9">
                                @Model.sWorkFlowDestino
                            </div>
                        </div>
                    }

                    <div class="form-group">
                        @Html.LabelFor(model => model.sAdjuntaArchivo, new { @class = "col-md-3" })
                        <div class="col-md-9">
                            @Model.sAdjuntaArchivo
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.aleSubject, new { @class = "col-md-3" })
                        <div class="col-md-9">
                            @Model.aleSubject
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.aleHtmlBody, new { 
                                        @class = "col-md-3" 
                                    })
            <div class="col-md-12">

                @Html.TextAreaFor(model => model.aleHtmlBody, new { 
                                @class = "form-control", 
                                @disabled = "disabled", 
                                @style = "resize:none;", 
                                @rows = "5" 
           })
            </div>
        </div>
                </div>
            </div>
        </div>
    </div>
}
<div class="modal-footer">
    <button type="button" class="btn btn-sm btn-info pull-left" data-dismiss="modal">Volver</button>
</div>
<script>
    var codRespuesta = '@(ViewBag.codRespuesta)';
    var msgRespuesta = '@(ViewBag.msgRespuesta)';
    if (codRespuesta == '1') {
        $("#divMensaje").append('<div class="alert alert-danger alert-dismissable"><button type="button" class="close" data-dismiss="alert">&times;</button>' + msgRespuesta + '</div>');
    }
</script>
