@model AltoRendimiento.Administracion.Models.ProvinciaModel
@using PagedList.Mvc;
<div class="text-right">
    @Html.ActionLink("Volver", "Index", "BandejaEntrada", null, new { @class = "btn btn-sm btn-info pull-left", @style = "color:White" })
    @Html.ActionLink("Nueva", "CrearProvincia", "MantenedorProvincia", null, new { data_modal = "", id = "btnAgregarProvincia", @class = "btn btn-sm btn-primary text-right", @style = "color:White" })
</div>
<br />
<div class="table-responsive">
    <table id="tblData" class="table table-condensed table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.sRegion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.prvNombre)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListaProvincias)
            {
                <tr>
                    <td>
                        @item.sRegion
                    </td>
                    <td>
                        @item.prvNombre
                    </td>
                    <td>
                        @Html.Raw(@Html.ActionLink("[replacetext]", "DetalleProvincia", new { id = item.idProvincia }, new { data_modal = "" }).ToHtmlString().Replace("[replacetext]", "<img data-toggle='tooltip' title='Detalle' src=\"Images/Reporte.png\" ... />"))
                        @Html.Raw(@Html.ActionLink("[replacetext]", "EditarProvincia", new { id = item.idProvincia }, new { data_modal = "" }).ToHtmlString().Replace("[replacetext]", "<img data-toggle='tooltip' title='Editar' src=\"Images/Edit.png\" ... />"))
                        @Html.Raw(@Html.ActionLink("[replacetext]", "EliminarProvincia", new { id = item.idProvincia }, new { data_modal = "" }).ToHtmlString().Replace("[replacetext]", "<img data-toggle='tooltip' title='Eliminar' src=\"Images/Trash.png\" ... />"))
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div id="dvInfoPaginacion">
        Página @(Model.ListaProvincias.PageCount < Model.ListaProvincias.PageNumber ? 0 : Model.ListaProvincias.PageNumber) de @Model.ListaProvincias.PageCount
        @Html.PagedListPager(Model.ListaProvincias, page => Url.Action("Index", new { page }))
    </div>
</div>
