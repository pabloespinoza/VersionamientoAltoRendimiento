@model AltoRendimiento.Administracion.Models.MantenedorTipoProductoCargoModel

@{
    ViewBag.Title = "Editar Cargo Relacionado.";
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Modificar Cargo Relacionado</h4>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <div id="mensaje">
            </div>

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.IdCargoProducto)
            <div class="form-group">
                @Html.LabelFor(model => model.idTipoProducto, "Tipo de Producto", new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.idTipoProducto, Model.ListaTipoProducto, "--Seleccione--", new { @class = "form-control", @disabled = "disabled" })
                    @Html.ValidationMessage("idTipoProducto", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.IdCargo, "Cargo", new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.DropDownListFor(model => model.IdCargo, Model.ListaCargo, "--Seleccione--", new { @class = "form-control" })
                    @Html.ValidationMessage("IdCargo", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" id="btnCancelar" class="btn btn-sm btn-danger pull-left" data-dismiss="modal">Cancelar</button>
        <button type="submit" id="btnGuardar" class="btn btn-sm btn-success ">Guardar</button>
    </div>
}
<script>
    var codError = '@(ViewBag.codError)';
    var mensajeRespuesta = '@(ViewBag.respuesta)';
    var tipoEstilo = "";
    if (mensajeRespuesta != "") {
        if (codError == '0') {
            tipoEstilo = "alert-success";
            $("#btnGuardar").attr("disabled", "disabled");
            $("#idTipoProducto").attr("disabled", "disabled");
            $("#IdCargo").attr("disabled", "disabled");
            $("#btnCancelar").html("Cerrar");
        } else {
            tipoEstilo = "alert-danger";
            if (codError == '1') {
                $("#btnGuardar").attr("disabled", "disabled");
                $("#idTipoProducto").attr("disabled", "disabled");
                $("#IdCargo").attr("disabled", "disabled");
            }
        }
        var mensajeUsuario = '<div class="alert ' + tipoEstilo + ' alert-dismissable"><button type="button" class="close" data-dismiss="alert">&times;</button>' + mensajeRespuesta + '</div>';
        $("#mensaje").append(mensajeUsuario);
    }
</script>