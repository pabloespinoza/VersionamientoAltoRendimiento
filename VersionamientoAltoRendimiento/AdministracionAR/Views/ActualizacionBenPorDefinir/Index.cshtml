@model AltoRendimiento.Administracion.Models.ActualizacionBenPorDefinirModel

@{
    ViewBag.Title = "Buscar Beneficiarios por Definir.";
}

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<div id='myModalValidar' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContentValidar'></div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Inicio", "Index", "BandejaEntrada")</li>
            <li>Regularizar Beneficiarios por Definir</li>
        </ol>
    </div>
</div>
<h3>Regularizar Beneficiarios por Definir</h3>

<div id="mensaje"></div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading">Listados de Beneficiarios "POR DEFINIR", producto "Participación en Competencias" y de Nivel "Internacional"</div>
            @using (Html.BeginForm("Index", "ActualizacionBenPorDefinir", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="panel-body">
                    <div class="row">
                        <div class="form-group">
                            @Html.LabelFor(model => model.idOrganizacion, "Federación", new { @class = "control-label col-md-1" })
                            <div class="col-md-5">
                                @Html.DropDownListFor(model => model.idOrganizacion, Model.ListaFederacion, "--Seleccione--", new { @class = "form-control" })
                                @Html.ValidationMessage("idOrganizacion", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="row">
                        <div class="form-group pull-right">
                            <div class="col-md-12">
                                <input value="Buscar" type="submit" id="btnBuscar" class="btn btn-sm btn-success" />
                                <a href="ActualizacionBenPorDefinir" class="btn btn-sm btn-default">Limpiar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        @Html.Partial("ListaBensPorDefinir", Model)
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modalform")
}

<script>
    var codError = '@(ViewBag.codError)';
    var mensajeRespuesta = '@(ViewBag.respuesta)'
    var tipoEstilo = "";
    var fila = "";
    var codErrorActualizacion = "0";
    if (mensajeRespuesta != "") {
        if (codError == '0') {
            tipoEstilo = "alert-success";
        } else {
            tipoEstilo = "alert-danger";
        }
        var mensajeUsuario = '<div class="alert ' + tipoEstilo + ' alert-dismissable"><button type="button" class="close" data-dismiss="alert">&times;</button>' + mensajeRespuesta + '</div>';
        $("#mensaje").append(mensajeUsuario);
        if (codError == '2') {
            $("#tblNiveles").attr("style", "display:none;");
            $("#dvInfoPaginacion").attr("style", "display:none;");
        }
    }

    $('#myModal').on('hidden.bs.modal', function () {
        if (codErrorActualizacion == "0") {
            location.reload();
        }
    })

    $('#myModalValidar').on('hidden.bs.modal', function () {
        if (codError == "0") {
            $("#" + fila).removeClass("alert-danger");
            $("#" + fila).addClass("alert-success");
            $("#rutBeneficiario" + fila).attr("readonly", "true");
            $("#hdnRutAprobado[fila='" + fila + "']").val("1");
        }else
        {
            $("#" + fila).removeClass("alert-success");
            $("#" + fila).addClass("alert-danger");
            $("#hdnRutAprobado[fila='" + fila+"']").val("0");
        }
    })

</script>
