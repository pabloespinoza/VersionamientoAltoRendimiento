@model AltoRendimiento.Administracion.Models.MantenedorExcepcionTiempoEjecModel

@{
    ViewBag.Title = "Eliminar Excepción.";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">¿Está seguro que desea eliminar la Excepción?</h4>
</div>

@using (Html.BeginForm())
{
    <div class="modal-body">
        <div class="form-horizontal">
            <div id="mensaje">
            </div>
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.IdExcepcionTiempoEjecucion)
            @Html.HiddenFor(model => model.idProducto)
            <div class="form-group">
                @Html.LabelFor(model => model.NombreProducto, "Nombre Producto", new { @class = "col-sm-3" })
                <div class="col-sm-9">
                    @Model.NombreProducto
                    @Html.HiddenFor(model => model.NombreProducto)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MesFinOrginalProducto, "Mes Fin Original", new { @class = "col-sm-3" })
                <div class="col-sm-9">
                    @Model.MesFinOrginalProducto
                    @Html.HiddenFor(model => model.MesFinOrginalProducto)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.MesFinExcepcionProducto, "Mes Fin Excepción", new { @class = "col-sm-3" })
                <div class="col-sm-9">
                    @Model.MesFinExcepcionProducto
                    @Html.HiddenFor(model => model.MesFinExcepcionProducto)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.AnioExcepcionProducto, "Año de Excepción", new { @class = "col-sm-3" })
                <div class="col-sm-9">
                    @Model.AnioExcepcionProducto
                    @Html.HiddenFor(model => model.AnioExcepcionProducto)
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.JustificacionExcepcion, "Justificación", new { @class = "col-sm-3" })
                <div class="col-sm-9">
                    @Model.JustificacionExcepcion
                    @Html.HiddenFor(model => model.JustificacionExcepcion)
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" id="btnCancelar" class="btn btn-sm btn-danger pull-left" data-dismiss="modal">Cancelar</button>
        <button value="Eliminar" id="btnEliminar" class="btn btn-sm btn-success">Eliminar</button>
    </div>
}
<script>
    var codError = '@(ViewBag.codError)';
    var mensajeRespuesta = '@(ViewBag.respuesta)'
    var tipoEstilo = "";
    if (codError != "") {
        $("#btnEliminar").attr("disabled", "disabled");
        if (codError == '0') {
            tipoEstilo = "alert-success";
            $("#btnCancelar").html("Cerrar");
        } else {
            tipoEstilo = "alert-danger";
        }
        if (mensajeRespuesta != "") {
            var mensajeUsuario = '<div class="alert ' + tipoEstilo + ' alert-dismissable"><button type="button" class="close" data-dismiss="alert">&times;</button>' + mensajeRespuesta + '</div>';
            $("#mensaje").append(mensajeUsuario);
        }

    }
</script>