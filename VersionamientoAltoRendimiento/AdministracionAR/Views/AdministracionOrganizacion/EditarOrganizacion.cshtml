@model AltoRendimiento.Administracion.Models.AdministracionOrganizacionModel

@{
    ViewBag.Title = "Editar Organizacion.";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Modificar Organización</h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="modal-body">
        <div class="form-horizontal">
            <div id="mensaje">
            </div>

            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.idOrganizacion)
            @Html.HiddenFor(model => model.idEstado)
            <div class="panel panel-default">
                <div class="panel-heading">

                    Antecedentes de la Organización

                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Rut, "Rut", new { @class = "col-md-2" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(model => model.Rut, new { @class = "form-control", @placeHolder = "Rut ejemplo :12345678-9", @maxlength = "10", @disabled = "disabled" })
                            @Html.ValidationMessage("Rut", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Rut)
                        </div>
                        @Html.LabelFor(model => model.Nombre, "Nombre", new { @class = "col-md-1" })
                        <div class="col-md-5">
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", @maxlength = "128" })
                            @Html.ValidationMessage("Nombre", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Fax, "Fax", new { @class = "col-md-2" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(model => model.Fax, new { @class = "form-control", @maxlength = "128" })
                            @Html.ValidationMessage("Fax", new { @class = "text-danger" })
                        </div>
                        @Html.LabelFor(model => model.Telefono, "Teléfono", new { @class = "col-md-1" })
                        <div class="col-md-5">
                            @Html.TextBoxFor(model => model.Telefono, new { @class = "form-control", @maxlength = "128" })
                            @Html.ValidationMessage("Telefono", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.idTipoOrganizacion, "Tipo de organización", new { @class = "col-md-2" })
                        <div class="col-md-4">
                            @Html.DropDownListFor(model => model.idTipoOrganizacion, Model.ListaTipoOrganizacion, "--Seleccione--", new { @class = "form-control" })
                            @Html.ValidationMessage("idTipoOrganizacion", new { @class = "text-danger" })
                        </div>
                        
                        @Html.LabelFor(model => model.idRegion, "Región", new { @class = "col-md-1" })
                        <div class="col-md-5">
                            @Html.DropDownListFor(model => model.idRegion, Model.ListaRegion, "--Seleccione--", new { @class = "form-control" })
                            @Html.ValidationMessage("idRegion", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="panel panel-default">
                <div class="panel-heading">

                    Direcciones de la Organización

                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, "E-mail", new { @class = "col-md-2" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @maxlength = "128" })
                            @Html.ValidationMessage("Email", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.idComuna, "Comuna", new { @class = "col-md-2" })
                        <div class="col-md-4">
                            @Html.DropDownListFor(model => model.idComuna, Model.ListaComuna, "--Seleccione--", new { @class = "form-control" })
                            @Html.ValidationMessage("idComuna", new { @class = "text-danger" })
                        </div>
                        @Html.LabelFor(model => model.Direccion, "Dirección", new { @class = "col-md-1" })
                        <div class="col-md-5">
                            @Html.TextBoxFor(model => model.Direccion, new { @class = "form-control", @maxlength = "128" })
                            @Html.ValidationMessage("Direccion", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" id="btnCancelar" class="btn btn-sm btn-danger pull-left" data-dismiss="modal">Cancelar</button>
            <button type="submit" id="btnGuardar" class="btn btn-sm btn-success ">Guardar</button>
        </div>
    </div>
}
<script>

    document.getElementById("Rut").value = document.getElementById("Rut").value.replace(/\./g, '').replace(/\,/g, '');

    var codError = '@(ViewBag.codError)';
    var mensajeRespuesta = '@(ViewBag.respuesta)';
    var tipoEstilo = "";
    if (mensajeRespuesta != "") {
        if (codError == '0') {
            tipoEstilo = "alert-success";
            $("#btnGuardar").attr("disabled", "disabled");
            $("#Rut").attr("disabled", "disabled");
            $("#Fax").attr("disabled", "disabled");
            $("#Telefono").attr("disabled", "disabled");
            $("#idTipoOrganizacion").attr("disabled", "disabled");
            $("#idEstado").attr("disabled", "disabled");
            $("#Nombre").attr("disabled", "disabled");
            $("#idRegion").attr("disabled", "disabled");
            $("#provincia").attr("disabled", "disabled");
            $("#idComuna").attr("disabled", "disabled");
            $("#Email").attr("disabled", "disabled");
            $("#Direccion").attr("disabled", "disabled");
            $("#btnCancelar").html("Cerrar");
        } else {
            tipoEstilo = "alert-danger";
            if (codError == '1') {
                $("#btnGuardar").attr("disabled", "disabled");
                $("#Rut").attr("disabled", "disabled");
                $("#Fax").attr("disabled", "disabled");
                $("#Telefono").attr("disabled", "disabled");
                $("#idTipoOrganizacion").attr("disabled", "disabled");
                $("#idEstado").attr("disabled", "disabled");
                $("#Nombre").attr("disabled", "disabled");
                $("#idRegion").attr("disabled", "disabled");
                $("#provincia").attr("disabled", "disabled");
                $("#idComuna").attr("disabled", "disabled");
                $("#Email").attr("disabled", "disabled");
                $("#Direccion").attr("disabled", "disabled");
            }
        }
        var mensajeUsuario = '<div class="alert ' + tipoEstilo + ' alert-dismissable"><button type="button" class="close" data-dismiss="alert">&times;</button>' + mensajeRespuesta + '</div>';
        $("#mensaje").append(mensajeUsuario);
    }
</script>