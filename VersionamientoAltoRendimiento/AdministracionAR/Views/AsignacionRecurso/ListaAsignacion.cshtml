@model AltoRendimiento.Administracion.Models.AsignacionRecurso

<div class="text-right">
    @Html.ActionLink("Volver", "Index", "BandejaEntrada", null, new { @class = "btn btn-sm btn-info pull-left", @style = "color:White" })
</div>
<br />
<br />
<script src="~/Scripts/jquery.dataTables.min.js"></script>
<script src="~/Scripts/dataTables.bootstrap.min.js"></script>
<link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />
<script>
    $(document).ready(function () {
        $("#tblData").DataTable({
            "language":
                {
                    "sProcessing": "Procesando...",
                    "sLengthMenu": "Mostrar _MENU_ registros",
                    "sZeroRecords": "No se encontraron resultados",
                    "sEmptyTable": "Ningún dato disponible en esta tabla",
                    "sInfo": "Mostrando registros del _START_ al _END_ de un total de _TOTAL_ registros",
                    "sInfoEmpty": "Mostrando registros del 0 al 0 de un total de 0 registros",
                    "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
                    "sInfoPostFix": "",
                    "sSearch": "Buscar:",
                    "sUrl": "",
                    "sInfoThousands": ",",
                    "sLoadingRecords": "Cargando...",
                    "oPaginate": {
                        "sFirst": "Primero",
                        "sLast": "último",
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior"
                    },
                    "oAria": {
                        "sSortAscending": ": Activar para ordenar la columna de manera ascendente",
                        "sSortDescending": ": Activar para ordenar la columna de manera descendente"
                    }
                }
        }).on("draw.dt", function () {
            addEventClickDataModal();
        });

        if ('@Model.ListaAsignaciones.Count()' == '0') {
            $("#dvData").hide();
        } else {
            $("#dvData").show();
        }
    });
</script>

<div id="dvData" class="table-responsive">
    <table id="tblData" class="table table-condensed table-bordered table-hover">
        <thead>
            <tr>
                <th colspan="2"></th>
                <th colspan="3" style="text-align: center">Converge</th>
                <th></th>
                <th style="text-align: center">Converge</th>
                <th colspan="2"></th>
            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ctaNumeroCuenta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.linNombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sPresupuestoVigenteCuenta)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sAsignadoLinea)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sAsignadoEntidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sComprometido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sEjecutado)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.sDisponible)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListaAsignaciones)
            {
                <tr>
                    <td>
                        @item.ctaNumeroCuenta
                    </td>
                    <td>
                        @item.linNombre
                    </td>
                    <td>
                        @item.sPresupuestoVigenteCuenta
                    </td>
                    <td>
                        @item.sAsignadoLinea
                    </td>
                    <td>
                        @item.sAsignadoEntidad
                    </td>
                    <td>
                        @item.sComprometido
                    </td>
                    <td>
                        @item.sEjecutado
                    </td>
                    <td>
                        @item.sDisponible
                    </td>
                    <td>
                        @Html.Raw(@Html.ActionLink("[replacetext]", "DetalleComprometido", new { idOrganizacionLinea = item.idOrganizacionLinea, sComprometido = item.sComprometido, dComprometido = item.dComprometido }, new { data_modal = "" }).ToHtmlString().Replace("[replacetext]", "<img data-toggle='tooltip' title='Detalle Comprometido' src=\"Images/dollar-bill.png\" ... />"))
                        @Html.Raw(@Html.ActionLink("[replacetext]", "DetalleDisponible", new { idOrganizacionLinea = item.idOrganizacionLinea, dAsignadoEntidad = item.dAsignadoEntidad }, new { data_modal = "" }).ToHtmlString().Replace("[replacetext]", "<img data-toggle='tooltip' title='Detalle Disponible' src=\"Images/funds.png\" ... />"))
                        @Html.Raw(@Html.ActionLink("[replacetext]", "HistorialAsignacion", new { idOrganizacionLinea = item.idOrganizacionLinea }, new { data_modal = "" }).ToHtmlString().Replace("[replacetext]", "<img data-toggle='tooltip' title='Historial' src=\"Images/Reporte.png\" ... />"))
                        @Html.Raw(@Html.ActionLink("[replacetext]", "EditarAsignacion", new { id = item.idOrganizacionLinea, idOrganizacion = item.idOrganizacion, dPresupuestoVigenteCuenta = item.dPresupuestoVigenteCuenta, linNombre = item.linNombre, dAsignadoLinea = item.dAsignadoLinea, oliPresupuestoInicial = item.oliPresupuestoInicial, idConcurso = item.idConcurso }, new { data_modal = "" }).ToHtmlString().Replace("[replacetext]", "<img data-toggle='tooltip' title='Asignar' src=\"Images/Edit.png\" ... />"))
                        @Html.Raw(@Html.ActionLink("[replacetext]", "Index", "MantenedorLineaTipoProducto", new { idOrganizacionLinea = item.idOrganizacionLinea, linNombre = item.linNombre, idOrganizacion = item.idOrganizacion }, null).ToHtmlString().Replace("[replacetext]", "<img data-toggle='tooltip' title='Agregar Tipo Producto' src=\"Images/circledPlus.png\" ... />"))
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
