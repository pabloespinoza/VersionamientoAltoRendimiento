@model AltoRendimiento.Administracion.Models.AsignacionRecurso

@{
    ViewBag.Title = "Asignación de Recursos.";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Asignación de Recursos</h4>
</div>
@using (Html.BeginForm())
{
    <div class="modal-body">
        <div class="form-horizontal">
            <div id="divMensaje">
            </div>
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.idOrganizacionLinea)
            @Html.HiddenFor(model => model.idConcurso)
            @Html.HiddenFor(model => model.idOrganizacion)
            @Html.HiddenFor(model => model.dPresupuestoVigenteCuenta)
            @Html.HiddenFor(model => model.oliPresupuestoInicial)
            @Html.HiddenFor(model => model.dAsignadoLinea)
            <div class="panel panel-default">
                <div class="panel-heading">
                    Asignar / Rebajar Aporte
                </div>
                <div class="panel-body">
                    <div class="form-group">
                        @Html.LabelFor(model => model.linNombre, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.linNombre
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.orgNombre, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.orgNombre
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.orgRut, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.orgRut
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.sPresupuestoVigenteCuenta, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.sPresupuestoVigenteCuenta
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.sAsignadoLinea, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.sAsignadoLinea
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.sPresupuestoInicial, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Model.sPresupuestoInicial
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.oliPresupuesto, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.oliPresupuesto, new { @class = "form-control", @maxlength = "20" })
                            @Html.ValidationMessageFor(model => model.oliPresupuesto, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.halObservacion, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Html.TextAreaFor(model => model.halObservacion, new { @class = "form-control", @maxlength = "2048", @style = "resize:none;", @rows = "5" })
                            @Html.ValidationMessageFor(model => model.halObservacion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.idAccion, new { @class = "col-md-4" })
                        <div class="col-md-8">
                            @Html.DropDownListFor(model => model.idAccion, Model.ListaAcciones, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.idAccion, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" id="btnCancelar" class="btn btn-sm btn-danger pull-left" data-dismiss="modal">Cancelar</button>
        <button type="submit" id="btnEditar" class="btn btn-sm btn-success" onclick="return confirm('¿Esta seguro que desea realizar un cambio en el aporte a la federación?')">Guardar</button>
    </div>
}

<script>
    var codRespuesta = '@(ViewBag.codRespuesta)';
    var msgRespuesta = '@(ViewBag.msgRespuesta)';
    var tipoEstilo = "";
    if (msgRespuesta != "") {
        $("#btnEditar").attr("disabled", "disabled");
        $("#btnCancelar").html("Cerrar");
        $("#oliPresupuesto").attr("disabled", "disabled");
        $("#halObservacion").attr("disabled", "disabled");
        $("#idAccion").attr("disabled", "disabled");
        if (codRespuesta == '0') {
            tipoEstilo = "alert-success";
        } else {
            tipoEstilo = "alert-danger";
        }
        $("#divMensaje").append('<div class="alert ' + tipoEstilo + ' alert-dismissable"><button type="button" class="close" data-dismiss="alert">&times;</button>' + msgRespuesta + '</div>');
    }
</script>
