@model AltoRendimiento.Models.Beneficiario_Producto_Cargo

@{
    ViewBag.Title = "Create";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Nueva Asignacion de Beneficiario</h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    if (TempData["idProducto"] != null)
    {
        @Html.Hidden("idProducto", TempData["idProducto"])
    }

    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">

                <label for="inputEmail3" class="col-sm-4 control-label">Beneficiario</label>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.idBeneficiario, (IEnumerable<SelectListItem>)ViewBag.idBeneficiario, "--Seleccione--", new { @id = "Beneficiario-DropdownID", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idBeneficiario)
                </div>
            </div>

            <div class="form-group">

                <label for="inputEmail3" class="col-sm-4 control-label">Cargo</label>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.idCargo, (IEnumerable<SelectListItem>)ViewBag.idCargo, "--Seleccione--", new { @id = "Cargos-DropdownID", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idCargo)
                </div>
            </div>

        </div>
        @if (ViewData["Mensaje"] != null)
        {
            <div class="alert alert-danger alert-dismissable">@ViewData["Mensaje"]</div><br />
        }
        <div class="modal-footer">
            <button type="button" class="btn btn-sm btn-danger pull-left" data-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-sm btn-success ">Guardar</button>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    $('html').bind('keypress', function (e) {
        if (e.keyCode == 13) {
            return false;
        }
    });

    $("#Beneficiario-DropdownID").change(function () {
        idSelected = $(this).val();
        $.ajax({
            url: '@Url.Action("getCargos")' + "?idBeneficiario=" + idSelected + "&idProducto=" + TempData["idProducto"],
            type: "POST",
            success: function (data) {
                var options = "";
                options += ' <option value="">-- Seleccione -- </option>';
                $.each(data, function (index, value) {
                    if (value.nombre == 'DEPORTISTA') {
                        options += '<option value="' + value.id + '" selected="selected">' + value.nombre + '</option>';
                    }
                    else {
                        options += '<option value="' + value.id + '">' + value.nombre + '</option>';
                    }
                });
                $("#Cargos-DropdownID").html(options);
            },
            error: function () {
            }
        });
    });
</script>