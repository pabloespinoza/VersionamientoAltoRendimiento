@using AltoRendimiento.App_Code

@model AltoRendimiento.Models.Beneficiario_Producto_Cargo
@{
    ViewBag.Title = "Create";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Editar Beneficiario</h4>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="modal-body">
        <div class="form-horizontal">
            @Html.ValidationSummary(true)
            @if (TempData["idProducto"] != null)
            {
                @Html.Hidden("idProducto", TempData["idProducto"])
            }
            @Html.HiddenFor(model => model.idBeneficiarioProductoCargo)
            <div class="form-group">

                <label for="inputEmail3" class="col-sm-4 control-label">Beneficiario</label>
                <div class="col-md-6">
                    @if (ViewBag.idWorkFlow == (int)EnumEstados.AprobadoSC)
                    {
                        @Html.DropDownList("idBeneficiario", null, String.Empty, new { @class = "form-control" })
                    }
                    else
                    {
                        @Html.DropDownList("idBeneficiario", null, String.Empty, new { @class = "form-control" })
                    }

                    @Html.ValidationMessageFor(model => model.idBeneficiario)
                </div>
            </div>

            <div class="form-group">

                <label for="inputEmail3" class="col-sm-4 control-label">Cargo</label>
                <div class="col-md-6">
                    @Html.DropDownList("idCargo", null, String.Empty, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idCargo)
                </div>
            </div>

        </div>
        <div class="text-danger col-md-offset-2 ">@ViewData["Mensaje"]</div><br />
        <div class="modal-footer">
            <button type="button" class="btn btn-sm btn-danger pull-left" data-dismiss="modal">Cancelar</button>
            <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Si el cargo es deportista se eliminaran todos los gastos que tiene asociado.')">Guardar</button>
        </div>
    </div>


}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
    $('html').bind('keypress', function (e) {
        if (e.keyCode == 13) {
            return false;
        }
    });


</script>