        </ol>
    </div>
</div>
<div class="row">
    @* ng-show="user">*@
    <div class="col-md-12">
        <div class="text-right">
            <button type="button" onclick="volver()" class="btn btn-info  pull-left" data-dismiss="modal">Volver</button>
            <button class="btn btn-primary" data-toggle="modal" data-target="#myModal"> Nuevo Producto </button>
        </div><br />

        <table class="table table-condensed table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Nombre</th>
                    <th>Nivel</th>
                    <th>Lugar/Pais</th>
                    <th>Ciudad</th>
