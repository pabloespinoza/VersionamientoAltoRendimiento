@using AltoRendimiento.App_Code

@model IEnumerable<AltoRendimiento.Models.Archivo_Solicitud_Cambio>

@{
    ViewBag.Title = "Subir Archivo";
}

@using System.Globalization;
<!-- modal placeholder-->
<div class="container">
    <div id='myModal' class='modal fade in'>
        <div class="modal-dialog">
            <div class="modal-content">
                <div id='myModalContent'></div>
            </div>
        </div>
    </div>
</div>
@if (TempData["TempMessage"] != null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-success text-center" role="alert">
                <label>@TempData["TempMessage"]</label>
            </div>
        </div>
    </div>
    <br />
}
else if (TempData["TempMessageError"] != null)
{
    <div class="row">
        <div class="col-md-12">
            <div class="alert alert-danger text-center" role="alert">
                <label>@TempData["TempMessageError"]</label>
            </div>
        </div>
    </div>
    <br />
}

@Html.Action(actionName: "TempMessage", controllerName: "Message")


<h2>Archivos de la Solicitud de Cambio</h2>
<br />
<br />

<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>Home</li>
            <li>Proyecto @ViewBag.Proyecto.proNombreProyecto</li>
            <li>Productos</li>
        </ol>
    </div>
</div>

@*<div class="table-responsive">
        <table class="table table-condensed table-bordered table-striped table-hover"></table>
    </div>*@

<div id='myModal' class='modal fade in'>
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="text-right">
            <button type="button" onclick="volver()" class="btn btn-sm btn-info pull-left" data-dismiss="modal">Volver</button>
            &nbsp;&nbsp;
            @Html.ActionLink("Subir Archivo", "NuevoArchivo", "ProductoCopia", new { idSolicitud = TempData["idSolicitud"] }, new { data_modal = "", id = "btnCreate", @class = "btn btn-sm btn-primary text-right", @style = "color:White" })
        </div>

        <br />
        <br />

        <div class="table-responsive">
            @if (Model.Count() > 0)
            {
                <table class="table table-condensed table-bordered table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Nombre Archivo</th>
                            <th>Descripción</th>
                            <th>Tipo Archivo</th>
                            <th>Extensión</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>
                                    @Html.DisplayFor(modelItem => item.ascNombreArchivo)
                                </th>
                                <th>
                                    @Html.DisplayFor(modelItem => item.ascDescripcion)
                                </th>
                                <th>
                                    @Html.DisplayFor(modelItem => item.Tipo_Archivo_Solicitud_Cambio.tasNombre)
                                </th>
                                <th>
                                    @Html.DisplayFor(modelItem => item.ascArchivoExtension)
                                </th>
                                <th>
                                    @Html.Raw(@Html.ActionLink("[replacetext]", "EliminarArchivo", "ProductoCopia", new { idArchivoSol = item.idArchivoSolicitudCambio }, new { data_modal = "" }).ToHtmlString().Replace("[replacetext]", "<img data-toggle='tooltip' title='Eliminar Archivo Adjunto' src=\"../Images/trash.png\" ... />"))
                                    @Html.Raw(@Html.ActionLink("[replacetext]", "DescargaArchivo", "ProductoCopia", new { idArchivoSolicitud = item.idArchivoSolicitudCambio, idSolicitud = item.idSolicitudCambio }, null).ToHtmlString().Replace("[replacetext]", "<img data-toggle='tooltip' title='Descargar Archivo' src=\"../Images/download.png\" ... />"))
                                </th>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center">
                    <label>No hay Archivos asociados a esta Solicitud de Cambio</label>
                </div>
                <br />
                <br />
                <br />
                <br />
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modalform")
}

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7/jquery.js"></script>
<script src="http://malsup.github.com/jquery.form.js"></script>
<script type="text/javascript" src="~/Scripts/bootstrap-filestyle.min.js"> </script>


