@model PagedList.IPagedList<AltoRendimiento.Controllers.RecintoRelOrganizacion>
@using PagedList.Mvc;
@{
    Layout = null;
}
@Styles.Render("~/Content/bootstrap-theme.css")
@Styles.Render("~/Content/bootstrap-theme.css.map")
@Styles.Render("~/Content/bootstrap-theme.min.css")
@Styles.Render("~/Content/bootstrap.css")
@Styles.Render("~/Content/bootstrap.css.map")
@Styles.Render("~/Content/bootstrap.min.css")
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListadoRecintos</title>
</head>
<body>
    <!-- modal placeholder-->
    <div id='myModal' class='modal fade in'>
        <div class="modal-dialog">
            <div class="modal-content">
                <div id='myModalContent'></div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        <table class="table table-condensed table-bordered table-striped table-hover" style="table-layout:fixed;word-wrap:break-word; margin-bottom:0">
            <thead>
                <tr>
                    <th style="width: 12%;">
                        &nbsp;
                    </th>
                    <th style="width: 36%;">
                        Nombre Recinto
                    </th>
                    <th style="width: 46%;">
                        Dirección
                    </th>
                    <th>
                        &nbsp;
                    </th>
                </tr>
            </thead>
            @if (Model.Count > 0)
            {
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.recPublico
                            </td>
                            <td>
                                @item.recNombre
                            </td>
                            <td>
                                @item.recDireccion
                            </td>
                            <td>
                                @Html.Raw(@Html.ActionLink("[replacetext]", "ListDelete", new { id = item.idRecintoOrganizacion }, new { data_modal = "" }).ToHtmlString().Replace("[replacetext]", "<img data-toggle='tooltip' title='Quitar' src=\"../Images/Trash.png\" ... />"))
                            </td>
                        </tr>
                    }
                </tbody>
            }
            else
            {
                <tbody>
                    <tr>
                        <td colspan="4">No existen Recintos para mostrar</td>
                    </tr>
                </tbody>
            }
        </table>
        @if (Model.Count > 0)
        {
            @Html.PagedListPager(Model, page => Url.Action("CreateRecinto",
    new { page }))
        }
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/modalform")
    }
</body>
</html>
