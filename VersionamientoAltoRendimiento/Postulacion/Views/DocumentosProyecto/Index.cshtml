        </div>
        @Html.Partial("_Create", new AltoRendimiento.Models.Documentos_Proyecto())
        
        <div class="text-danger"><label id="error" name="error"> @ViewBag.sessionErrorDocumento</label></div><br />

        <table class="table table-condensed table-bordered table-striped table-hover" style="table-layout:fixed;word-wrap:break-word">
            <thead>
                <tr>
                    <th>
                        Tipo Documento
                    </th>
                    <th>
                        Nombre Documento
                    </th>
                    <th>
                        Nombre Archivo
                    </th>
                    <th>Accion</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count() > 0)
                { 
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tipo_Documento_Proyecto.tdpNombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dopNombreIdentificacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.dopNombreArchivo)
                        </td>

                        <td>
                            <a href='@Url.Action("Download", "DocumentosProyecto", new { id = item.idDocumentoProyecto })' title="Adjuntos"><img width="20" data-toggle='tooltip' title='Descargar' src='@Url.Content("~/Images/download.png")' /></a>

                            @Html.Raw(@Html.ActionLink("[replacetext]", "Delete", new { id = item.idDocumentoProyecto}, new { data_modal = "" }).ToHtmlString().Replace("[replacetext]", "<img data-toggle='tooltip' title='Eliminar' src=\"../Images/Trash.png\" ... />"))

                        </td>
                    </tr>
                }
                }
                else
                {
                    <tr>
                        <td colspan="4">
                            El proyecto no cuenta con documentos.
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="panel-footer">@Model.Count() Registro(s)</div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/modalform")
}