@model IEnumerable<AltoRendimiento.Models.Documentos_Proyecto>

@{
    ViewBag.Title = "Index";
    string folio = ((AltoRendimiento.Models.Proyecto)ViewBag.Proyecto).proFolioProyecto.ToString();
    if(folio == "0")
    {
        folio = "Sin Código";
    }else
    {
        folio = folio.Substring(2, folio.Length - 2);
    }
}


<script type="text/javascript" src="~/Scripts/bootstrap-filestyle.min.js"> </script>
<!-- modal placeholder-->
<div id='myModal' class='modal fade in'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li>@Html.ActionLink("Inicio", "Index", "AntecedenteGeneralProyecto")</li>
            <li><b>Documentos Adjuntos del Proyecto @(folio) - 
                @(((AltoRendimiento.Models.Proyecto)ViewBag.Proyecto).proNombreProyecto)</b></li>
        </ol>
    </div>
</div>
<h3>Documentos</h3>

<div class="row">
    <div class="form-group">
        <label class="col-md-2 control-label">Nombre Proyecto</label>
        <div class="col-md-5">
            @(((AltoRendimiento.Models.Proyecto)ViewBag.Proyecto).proNombreProyecto)
        </div>
    </div>
</div>


<br />
